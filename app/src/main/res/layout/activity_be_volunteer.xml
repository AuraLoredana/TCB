<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="251dp"
            android:paddingBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/voluntaritcb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:padding="15dp"
            android:text="@string/inceput"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:padding="15dp"
            android:text="@string/cum_pot_sa_devin_voluntar_al_asociatiei"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textdescvol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:padding="15dp"
            android:text="@string/descrierevoluntariat"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"


             android:layout_height="wrap_content"
            android:orientation="horizontal">


        <Button
            android:id="@+id/btnvoladulti"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btnvoladulti"
            android:text="Pachet Voluntari Adulti" />
        <Button
            android:id="@+id/btnvolminori"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/btnvoladulti"
            android:text="Pachet Voluntari Minori" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>